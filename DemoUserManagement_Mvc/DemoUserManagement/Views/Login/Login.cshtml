@model DemoUserManagement.Models.LoginModel

@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="card-title text-center">Login here...</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Email", required = "required" })
                            <div id="emailMessage"></div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <button type="submit" class="btn btn-primary">Login</button>
                            @Html.ActionLink("New User?? Register Here!!", "Register", "Account", null, new { @class = "text-link" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

