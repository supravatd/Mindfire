@model List<DemoUserManagement.Models.Model.DocumentModel>
<div class="form-group">
    <label for="ddlDocumentType">Select Document Type:</label>
    <select id="ddlDocumentType" class="form-control"></select>
</div>
<div class="form-group">
    <label for="fileUpload">Upload Document:</label>
    <div class="input-group">
        <div class="custom-file">
            <input type="file" id="fileUpload" class="custom-file-input" />
        </div>
        <div class="input-group-append">
            <button type="button" id="btnUpload" class="btn btn-primary">Upload</button>
        </div>
    </div>
</div>


<br />
<div class="col-md-6">
    <div>
        <table id="documentGrid" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <a href="#" class="sort-link" data-sortby="DocumentID">Document ID</a>
                    </th>
                    <th>Object ID</th>
                    <th>Object Type</th>
                    <th>
                        <a href="#" class="sort-link" data-sortby="DocumentType">Document Type</a>
                    </th>
                    <th>Document Original Name</th>
                    <th>Download File</th>
                    <th>Added On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model)
                {

                    <tr>
                        <td>@doc.DocumentID</td>
                        <td>@doc.ObjectID</td>
                        <td>@doc.ObjectType</td>
                        <td>@doc.DocumentType</td>
                        <td>@doc.DocumentOriginalName</td>
                        <td>
                            <a href="#" class="download-link" data-filename="@doc.DocumnetNameOnDisk" data-original-filename="@doc.DocumentOriginalName">Download</a>
                        </td>
                        <td>@doc.AddedOn</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    var currentPage = ViewBag.DocPage ?? 0;
    var sortBy = ViewBag.DocSortBy ?? "DocumentID";
    var pageSize = ViewBag.DocPageSize ?? 3;
    var objectId = ViewBag.DocObjectId;
    var totalDoc = DemoUserManagement.Business.Business.GetTotalDocuments(objectId);
    var totalPages = (int)Math.Ceiling((double)totalDoc / pageSize);
}

<ul class="pagination">

    @for (int i = 1; i <= totalPages; i++)
    {
        <li class="page-item @(i == currentPage ? "active" : "")">
            <a class="page-link" href="?page=@i&sortBy=@sortBy">@i</a>
        </li>
    }
</ul>
