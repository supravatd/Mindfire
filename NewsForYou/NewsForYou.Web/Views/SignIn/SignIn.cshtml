﻿@model NewsForYou.Model.Model.SignInModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-5 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="card-title text-center">Sign here...</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("SignIn", "SignIn", FormMethod.Post))
                    {
                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(true)
                            </div>
                        }
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Email", required = "required" })
                            <div id="emailMessage"></div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/Scripts/SignIn.js")
}